<%= form_for @rent, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :leaseuser_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :leaseuser_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fecha_inicio, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :fecha_inicio, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fecha_fin, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :fecha_fin, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :descuento, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :descuento, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                rents_path, :class => 'btn' %>
  </div>
<% end %>
