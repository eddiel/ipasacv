<%- model_class = @rent.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:leaseuser_id) %>:</strong></dt>
  <dd><%= @rent.leaseuser_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fecha_inicio) %>:</strong></dt>
  <dd><%= @rent.fecha_inicio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fecha_fin) %>:</strong></dt>
  <dd><%= @rent.fecha_fin %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descuento) %>:</strong></dt>
  <dd><%= @rent.descuento %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              rents_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_rent_path(@rent), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              rent_path(@rent),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
