<%= form_for @surcharge, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :folio, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :folio, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :monto, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :monto, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :invoice_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :invoice_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                surcharges_path, :class => 'btn' %>
  </div>
<% end %>
