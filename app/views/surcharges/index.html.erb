<%- model_class = Surcharge.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:folio) %></th>
      <th><%= model_class.human_attribute_name(:monto) %></th>
      <th><%= model_class.human_attribute_name(:invoice_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @surcharges.each do |surcharge| %>
      <tr>
        <td><%= link_to surcharge.id, surcharge_path(surcharge) %></td>
        <td><%= surcharge.folio %></td>
        <td><%= surcharge.monto %></td>
        <td><%= surcharge.invoice_id %></td>
        <td><%=l surcharge.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_surcharge_path(surcharge), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      surcharge_path(surcharge),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_surcharge_path,
            :class => 'btn btn-primary' %>
